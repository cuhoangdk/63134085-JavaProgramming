import java.util.Scanner;

public class LAB1 {
	public static void Bai1(){
		Scanner scanner = new Scanner(System.in);
		System.out.print("Họ và tên: ");
		String hoTen = scanner.nextLine();
		System.out.print("Điểm TB: ");
		double diemTB = scanner.nextDouble();
		scanner.close();
		System.out.printf("%s %f điểm", hoTen, diemTB);
	}
	public static void Bai2() {
		float dai, rong, chuVi, dienTich, canhNganNhat;
		Scanner scanner = new Scanner(System.in);
		System.out.print("Nhập chiều dài: ");
		dai = scanner.nextFloat();
		System.out.print("Nhập chiều rộng: ");
		rong = scanner.nextFloat();
		scanner.close();
		chuVi = (dai+rong)*2;
		dienTich = dai*rong;
		canhNganNhat = Math.min(dai, rong);
		System.out.printf("Chu vi hình chữ nhật: %f", chuVi);
		System.out.printf("Diện tích hình chữ nhật: %f", dienTich);
		System.out.printf("Cạnh nhỏ nhất: %f", canhNganNhat);
	}
	public static void Bai3() {
		float canh, theTich;
		Scanner scanner = new Scanner(System.in);
		System.out.print("Nhập cạnh: ");
		canh = scanner.nextFloat();		
		scanner.close();
		theTich= (float) Math.pow(canh,3);
		System.out.printf("Thể tích hình lập phương: %f", theTich);
	}
	public static void Bai4() {
		float a,b,c,delta;
		Scanner scanner = new Scanner(System.in);
		System.out.print("Nhập a: ");
		a = scanner.nextFloat();		
		System.out.print("Nhập b: ");
		b = scanner.nextFloat();		
		System.out.print("Nhập c: ");
		c = scanner.nextFloat();		
		scanner.close();
		delta = (float) Math.pow(b, 2) - 4*a*c;
		System.out.printf("Delta: %f", Math.sqrt(delta));
	}
	public void main() {
		Bai1();
		Bai2();
		Bai3();
		Bai4();
	}
}
